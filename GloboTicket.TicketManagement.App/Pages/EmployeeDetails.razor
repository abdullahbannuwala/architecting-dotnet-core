@page "/employeedetails"
@page "/employeedetails/{employeeid}"

<h1 class="page-title">Details for @EmployeeDetailViewModel.Name</h1>

@Message

<EditForm Model="@EmployeeDetailViewModel" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>

    <div class="form-group row">
        <label for="name" class="col-sm-3">Employee name: </label>
        <InputText id="name" class="form-control col-sm-8" @bind-Value="@EmployeeDetailViewModel.Name" placeholder="Enter employee name"></InputText>
        <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => EmployeeDetailViewModel.Name)" />
    </div>

    <div class="form-group row">
        <label for="price" class="col-sm-3">Email: </label>
        <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@EmployeeDetailViewModel.Email" placeholder="Enter email"></InputText>
        <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => EmployeeDetailViewModel.Email)" />

    </div>



    <div class="form-group row">
        <label for="date" class="col-sm-3">Date of Bith: </label>
        <InputDate id="date" class="form-control col-sm-8" @bind-Value="@EmployeeDetailViewModel.DateofBirth"></InputDate>
    </div>





    <button type="submit" class="submit-button">Save employee</button>
   
</EditForm>


<p class="back-to-catalog mt-3"><img src="img/back-arrow.svg" /><a @onclick="@NavigateToOverview">Back to overview</a></p>